{
    "name": "Gesture Recognition",
    "dataset": "Bukva",
    "epochs": 100,
    "phase": "train",
    "data": {
      "n_classes": 34,
      "n_frames": 40,
      "data_path": "./datasets/",
      "workers": 4,
      "batch_size": 8
    },
    "checkpoints": {
      "save_policy": "best",
      "save_name": "train",
      "save_dir": "./checkpoints/",
      "save_iters": 30,
      "tb_path": "train_log"
    },
    "scores": {
      "save_dir": "./scores/"
    },
    "solver": {
      "type": "AdamW",
      "weight_decay": 0.0001,
      "base_lr": 0.0001,
      "decay_steps": [50, 75]
    },
    "network":{
      "backbone": "resnet",
      "pretrained": true,
      "ff_size": 1024,
      "n_head": 8,
      "dropout2d" : 0.1,
      "dropout1d": 0.5,
      "n_module": 6
    }
}